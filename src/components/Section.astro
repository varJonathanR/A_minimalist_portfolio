---
interface Props {
  title?: string
};

const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 42px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    font-size: 1.5rem;
  }

  @media screen and (maxwidth: 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
